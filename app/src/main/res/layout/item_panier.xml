<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="#F7F7F7">

        <ImageView
            android:id="@+id/imgProduit"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/txtNom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/imgProduit"
            app:layout_constraintTop_toTopOf="@id/imgProduit"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txtPrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#444444"
            app:layout_constraintStart_toEndOf="@id/imgProduit"
            app:layout_constraintTop_toBottomOf="@id/txtNom" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@id/imgProduit"
            app:layout_constraintTop_toBottomOf="@id/txtPrix">

            <Button
                android:id="@+id/btnMoins"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-" />

            <TextView
                android:id="@+id/txtQuantite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+" />
        </LinearLayout>

        <Button
            android:id="@+id/btnRetirer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retirer"
            android:backgroundTint="@android:color/holo_red_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/imgProduit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
